<section class="row border pt-5 pb-5">
  <section class="col-md-6 offset-md-3">
    <h1>New Photo</h1>

    <%= form_for @photo do |form| %>
      <section class="form-group">
        <%= form.label :caption %><br>
        <%= form.text_area :caption, class: "form-control" %>
      </section>

      <section class="form-group">
        <%= form.label :image %><br>
        <%= form.file_field :image, class: "form-control-file" %>
      </section>

      <section class="form-group">
        <%= form.label :images %><br>
        <%= form.file_field :images, multiple: true, class: "form-control-file" %>
      </section>

      <section class="form-group">
        <%= form.label :attachment %><br>
        <%= form.file_field :attachment, class: "form-control-file" %>
      </section>


      <section class="form-group">
        <%= form.submit 'Upload', class: "btn btn-outline-primary" %>
      </section>
    <% end %>

  </section>
</section>
